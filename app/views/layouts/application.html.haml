!!!
%html{lang: :en}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title= t('application.title')
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-3.col-md-offset-9
          -#= link_to t('application.upload_document'), new_document_path, class: 'btn btn-success'
      .row
        .col-md-12
          -flash.each do |msg_type, msg|
            %div{class: "alert alert-#{bootstrap_alert(msg_type)} alert-dismissible", role: "alert"}
              = msg
              %button.close{type: 'button', 'data-dismiss' => 'alert', 'aria-label' => t('flash.close')}
                %span{'aria-hidden' => 'true'}
                  &times;
      .row
        .col-md-12
          = yield
